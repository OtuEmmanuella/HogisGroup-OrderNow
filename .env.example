# ------------------------------------------------------------------------------
# Convex Configuration
# ------------------------------------------------------------------------------
# Public URL for your Convex backend (used by client-side code)
NEXT_PUBLIC_CONVEX_URL=

# Deployment alias for local development via `npx convex dev`
CONVEX_DEPLOYMENT=

# ------------------------------------------------------------------------------
# Clerk Authentication (Frontend)
# ------------------------------------------------------------------------------
# Your Clerk publishable key (safe to expose in the browser)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=

# URLs for redirecting users after auth flows (relative to your app)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Base URL of your Clerk issuer (used server-side to verify tokens)
CLERK_ISSUER_URL=

# ------------------------------------------------------------------------------
# Clerk Authentication (Server)
# ------------------------------------------------------------------------------
# Your Clerk secret key (keep this private!)
CLERK_SECRET_KEY=

# Webhook secret for verifying incoming Clerk events
CLERK_WEBHOOK_SECRET=

# ------------------------------------------------------------------------------
# Paystack Payment Gateway
# ------------------------------------------------------------------------------
# Your Paystack secret key (server-side only)
PAYSTACK_SECRET_KEY=

# Your Paystack public key (exposed to client for initiating payments)
PAYSTACK_PUBLIC_KEY=

# Secret used to validate Paystack webhook payloads
PAYSTACK_WEBHOOK_SECRET=

# ------------------------------------------------------------------------------
# Application URLs
# ------------------------------------------------------------------------------
# Base URL of your running app (used for building links, CORS, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000 #Change in production

# ------------------------------------------------------------------------------
# Email (SMTP) Configuration
# ------------------------------------------------------------------------------
# Email address used to send transactional emails
EMAIL_USER=

# App-specific password or SMTP password for the above email
EMAIL_PASSWORD=
